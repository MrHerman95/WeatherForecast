<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_temperature_unit_rg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/fab_color">

    <RadioButton
        android:id="@+id/rb_settings_celsius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@string/str_settings_celsius"
        android:textColor="@color/white"
        android:textSize="18sp"
        tools:textColor="@color/black" />

    <RadioButton
        android:id="@+id/rb_settings_fahrenheit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@string/str_settings_fahrenheit"
        android:textColor="@color/white"
        android:textSize="18sp"
        tools:textColor="@color/black" />
</RadioGroup>